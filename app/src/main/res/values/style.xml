<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="CustomSnackbar" parent="Widget.Design.Snackbar">
        <!-- Change background color -->
        <item name="android:background">@color/normalColor</item>
        <!-- Change text color -->
        <item name="android:textColor">@color/white</item>
        <!-- You can also customize other properties of the Snackbar here -->
    </style>
    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <!-- Change background color to white -->
        <item name="android:popupBackground">@android:color/white</item>

    </style>
    <style name="PopupMenuIconsOnly" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textSize">0sp</item>
        <item name="iconSize">32dp</item> <!-- Adjust the size as needed -->
    </style>


        <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
            <!-- Define cursor color here -->
            <item name="android:textCursorDrawable">@drawable/custom_cursor</item>

        </style>
    <style name="CustomEditTextStyleForUser" parent="Widget.AppCompat.EditText">
        <!-- Define cursor color here -->
        <item name="android:textCursorDrawable">@drawable/custom_cursor_for_user</item>

    </style>




</resources>